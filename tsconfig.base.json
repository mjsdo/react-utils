{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "es2018",
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "pretty": true,
    "noEmitOnError": true,
    "jsx": "react",
    "baseUrl": ".",
    "importHelpers": true,
    "resolveJsonModule": true,
    "types": ["@testing-library/cypress", "cypress", "node", "types"]
  }
}
